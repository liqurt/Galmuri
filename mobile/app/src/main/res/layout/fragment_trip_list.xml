<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.tab_trip.fragment.TripListFragment">

    <TextView
        android:id="@+id/triplist_top_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:textColor="#000000"
        android:textSize="30sp"
        android:text="List of Companions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/svContinent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/triplist_top_msg">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/triplist_btn_all"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/triplist_others" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:text="전체"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>


<!--아시아-->
            <androidx.cardview.widget.CardView
                android:id="@+id/triplist_btn_asia"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/triplist_asia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:text="아시아"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

<!-- 유럽 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/triplist_btn_europe"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/triplist_europe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:text="유럽"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

            <!-- 아프리카 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/triplist_btn_africa"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:text="아프리카"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

<!-- 북아메리카 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/triplist_btn_north_america"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/triplist_america" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:text="북아메리카"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

            <!-- 남아메리카 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/triplist_btn_south_america"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:text="남아메리카"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/triplist_btn_oceania"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:includeFontPadding="false"
                    android:text="오세아니아"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </HorizontalScrollView>

    <!-- 유럽 대륙 버튼 -->

    <!-- 그 외 대륙 버튼 -->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvTrip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/svContinent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNewTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>