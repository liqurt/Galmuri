<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tripstyledialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신의 여행 스타일은?"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:textSize="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/tripdialog"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tripstyledialog"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <com.google.android.material.chip.Chip
            android:id="@+id/btnone"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="첫번째스타일"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/btntwo"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="두번째스타일"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/btnthree"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세번째스타일"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/btnfour"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네번째스타일"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/btnfive"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5번째스타일"/>

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/submitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#8FA7FC"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@id/tripdialog"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/Cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:backgroundTint="#FFA7A1"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@id/tripdialog"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>