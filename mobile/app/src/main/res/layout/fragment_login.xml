<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:background="@color/design_default_color_primary"></ImageView>

    <Button
        android:id="@+id/twit_login"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:text="트위치로 로그인"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="527dp"></Button>

    <Button
        android:id="@+id/google_login"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginBottom="44dp"
        android:text="구글로 로그인"
        app:layout_constraintBottom_toTopOf="@+id/twit_login"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"></Button>

    <Button
        android:id="@+id/kakao_login"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginBottom="44dp"
        android:text="카카오로 로그인"
        app:layout_constraintBottom_toTopOf="@+id/google_login"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"></Button>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toEndOf="@+id/twit_login"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="527dp"
        android:background="@color/cardview_light_background"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toEndOf="@+id/google_login"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="422dp"
        android:background="@color/cardview_light_background"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toEndOf="@+id/kakao_login"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="318dp"
        android:background="@color/cardview_light_background"/>


</androidx.constraintlayout.widget.ConstraintLayout>